# Base de datos PostgreSQL
# Reemplaza con tu URL de conexión a PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/esp32_ota_db"

# Entorno de desarrollo
NODE_ENV="development"

# URL base de la aplicación (opcional, para producción)
NEXTAUTH_URL="http://localhost:3000"

# Configuración de autenticación (si planeas agregar autenticación)
NEXTAUTH_SECRET="tu-secreto-super-seguro-aqui"

# API Keys para servicios externos (si los usas)
# WEATHER_API_KEY="tu-api-key-del-clima"
# MAPS_API_KEY="tu-api-key-de-mapas"

# Configuración MQTT (si planeas usar MQTT)
# MQTT_BROKER_URL="mqtt://localhost:1883"
# MQTT_USERNAME="usuario_mqtt"
# MQTT_PASSWORD="contraseña_mqtt"

# Puerto del servidor (opcional)
PORT=3000

# Configuración de logging
LOG_LEVEL="info"